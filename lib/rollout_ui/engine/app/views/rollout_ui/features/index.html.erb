<ul id="features">
  <% @features.each do |feature| %>
    <li id="<%= feature.name %>" class="feature clearfix"><%= render 'feature', :feature => feature %></li>
  <% end %>
  <li id="new-feature" class="feature clearfix">
    <h2>Create new feature</h2>
    <%= form_tag features_path do %>
      <%= label_tag :name, 'Name' %>
      <%= text_field_tag :name %>
      <%= submit_tag 'Create' %>
    <% end %>
  </li>
</ul>

<% content_for :onready do %>
  $("select").chosen({no_results_text: "No groups matched"});
  $("input.users").chosen();

  $("select, input.users").change(function() {
    $(this).closest("form").submit();
  });
<% end %>